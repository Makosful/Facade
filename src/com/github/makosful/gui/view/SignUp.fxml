<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.makosful.gui.controller.SignUpController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <TextField fx:id="txtUserName" promptText="User Name" />
                <TextField fx:id="txtEmail" promptText="Email" />
                <PasswordField fx:id="txtPass1" promptText="Password" />
                <PasswordField fx:id="txtPass2" promptText="Confirm Password" />
                <ButtonBar buttonMinWidth="100.0" buttonOrder="LR">
                    <buttons>
                        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" ButtonBar.buttonData="LEFT" />
                        <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#handleCreate" text="Create" ButtonBar.buttonData="RIGHT" />
                    </buttons>
                </ButtonBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
